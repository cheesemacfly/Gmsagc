{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <a href="{{ path('ngpp_gmsagc_press_save') }}" class="btn btn-success">
        <i class="icon-plus icon-white"></i> Create new press
    </a>
    <br><br>
    {% if press is defined and press %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th></th>
            </tr>
        {% for press in press %}
            <tr>
                <td>{{ press.id }}</td>
                <td>{{ press.name }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_press_save', {'id': press.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <h1>Nothing to show yet!</h1>
    {% endif %}
{% endblock %}