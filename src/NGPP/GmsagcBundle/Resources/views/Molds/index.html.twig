{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <div class="row">
        <div class="span6">
            <a href="{{ path('ngpp_gmsagc_molds_save') }}" class="btn btn-success">
                <i class="icon-plus icon-white"></i> {{ 'molds.add'|trans }}
            </a>
        </div>
        <div class="span6">
            {% include 'NGPPGmsagcBundle:_Shared:search.html.twig' %}
        </div>
    </div> 
    <br><br>
    {% if molds is defined and molds %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Weight'|trans }}</th>
                <th>{{ 'Place'|trans }}</th>
                <th>{{ 'Shell'|trans }}</th>
                <th></th>
            </tr>
        {% for mold in molds %}
            <tr>
                <td>{{ mold.id }}</td>
                <td>{{ mold.name }}</td>
                <td>{{ mold.weight }}</td>
                <td>{{ mold.place }}</td>
                <td>{{ mold.shell }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_molds_save', {'id': mold.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                    <a href="{{ path('ngpp_gmsagc_reports', {'mold_id': mold.id}) }}" class="btn btn-info">
                        <i class="icon-list-alt icon-white"></i> {{ 'reports.menu'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
        {% include 'NGPPGmsagcBundle:_Shared:pagination.html.twig' %}
    {% else %}
        <h2 class="muted">{{ 'message.nothing'|trans }}</h2>
    {% endif %}
{% endblock %}