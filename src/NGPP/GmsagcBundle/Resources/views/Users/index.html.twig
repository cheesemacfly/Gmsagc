{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <a href="{{ path('ngpp_gmsagc_users_save') }}" class="btn btn-success">
        <i class="icon-plus icon-white"></i> {{ 'users.add'|trans }}
    </a>
    <br><br>
    {% if users is defined and users %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_users_save', {'id': user.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                    <a href="{{ path('ngpp_gmsagc_users_password', {'id': user.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'password.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <h1>{{ 'message.nothing'|trans }}</h1>
    {% endif %}
{% endblock %}