{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <div class="row">
        <div class="span6">
            <a href="{{ path('ngpp_gmsagc_users_save') }}" class="btn btn-success">
                <i class="icon-plus icon-white"></i> {{ 'users.add'|trans }}
            </a>
        </div>
        <div class="span6">
            {% include 'NGPPGmsagcBundle:_Shared:search.html.twig' %}
        </div>
    </div> 
    <br><br>
    {% if users is defined and users %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>{{ 'Username'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th></th>
            </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_users_save', {'id': user.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                    <a href="{{ path('ngpp_gmsagc_users_password', {'id': user.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'password.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
        {% include 'NGPPGmsagcBundle:_Shared:pagination.html.twig' %}
    {% else %}
        <h2 class="muted">{{ 'message.nothing'|trans }}</h2>
    {% endif %}
{% endblock %}