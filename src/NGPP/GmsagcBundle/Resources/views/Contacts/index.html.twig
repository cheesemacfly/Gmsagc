{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <a href="{{ path('ngpp_gmsagc_contacts_save') }}" class="btn btn-success">
                <span class="glyphicon glyphicon-plus"></span> {{ 'contacts.add'|trans }}
            </a>
        </div>
        <div class="col-lg-4">
            {% include 'NGPPGmsagcBundle:_Shared:search.html.twig' %}
        </div>
    </div>
    <br>
    {% if contacts is defined and contacts %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Phone'|trans }}</th>
                <th></th>
            </tr>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.name }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_contacts_save', {'id': contact.id}) }}" class="btn btn-warning">
                        <span class="glyphicon glyphicon-edit"></span> {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
        {% include 'NGPPGmsagcBundle:_Shared:pagination.html.twig' %}
    {% else %}
        <h2 class="text-muted">{{ 'message.nothing'|trans }}</h2>
    {% endif %}
{% endblock %}