{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <a href="{{ path('ngpp_gmsagc_contacts_save') }}" class="btn btn-success">
        <i class="icon-plus icon-white"></i> {{ 'contacts.add'|trans }}
    </a>
    <br><br>
    {% if contacts is defined and contacts %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Phone'|trans }}</th>
                <th></th>
            </tr>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.name }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.phone }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_contacts_save', {'id': contact.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
        {% if pages is defined %}
            <div class="pagination pagination-large pagination-centered">
                <ul>
                    <li class="active">
                        <a href="{{ path('ngpp_gmsagc_contacts', app.request.query.all) }}">&laquo;</a>
                    </li>
                    {% for page in 1..pages %}
                        <li><a href="{{ path('ngpp_gmsagc_contacts', {'page': page}|merge(app.request.query.all)) }}">{{ page }}</a></li>
                    {% endfor %}
                    <li><a href="{{ path('ngpp_gmsagc_contacts', {'page': pages}|merge(app.request.query.all)) }}">&raquo;</a></li>
                </ul>
            </div>
        {% endif %}
    {% else %}
        <h1>{{ 'message.nothing'|trans }}</h1>
    {% endif %}
{% endblock %}