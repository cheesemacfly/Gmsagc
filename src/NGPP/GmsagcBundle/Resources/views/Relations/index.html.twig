{% extends '::base.html.twig' %}

{% block content %}
    <br>
    {% if relations is defined and relations %}
        <table class="table table-hover">
            <tr>
                <th>#order</th>
                <th>#contact</th>
                <th>Invoice number</th>
                <th>Invoice date</th>
                <th></th>
            </tr>
        {% for relation in relations %}
            <tr>
                <td>{{ relation.order.id }}</td>
                <td>{{ relation.contact.id }}</td>
                <td>{{ relation.invoice }}</td>
                <td>{{ relation.invoiced|date('m/d/Y') }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_relations_save', {'id': relation.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <h1>{{ 'message.nothing'|trans }}</h1>
    {% endif %}
{% endblock %}