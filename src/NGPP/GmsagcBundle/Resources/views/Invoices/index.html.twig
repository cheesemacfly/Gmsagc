{% extends '::base.html.twig' %}

{% block content %}
    <br>
    {% if invoices is defined and invoices %}
        <table class="table table-hover">
            <tr>
                <th>#order</th>
                <th>#contact</th>
                <th>Invoice number</th>
                <th>Invoice date</th>
                <th></th>
            </tr>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.order.id }}</td>
                <td>{{ invoice.contact.id }}</td>
                <td>{{ invoice.invoice }}</td>
                <td>{{ invoice.invoiced|date('m/d/Y') }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_invoices_save', {'order_id': invoice.order.id, 'contact_id': invoice.contact.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <h1>{{ 'message.nothing'|trans }}</h1>
    {% endif %}
{% endblock %}