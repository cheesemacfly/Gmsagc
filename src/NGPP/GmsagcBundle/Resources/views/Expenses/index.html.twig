{% extends '::base.html.twig' %}

{% block content %}
    <br>
    <a href="{{ path('ngpp_gmsagc_expenses_save') }}" class="btn btn-success">
        <i class="icon-plus icon-white"></i> {{ 'expenses.add'|trans }}
    </a>
    <br><br>
    {% if expenses is defined and expenses %}
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Country</th>
                <th></th>
            </tr>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.description }}</td>
                <td>{{ expense.price }}</td>
                <td>
                    <a href="{{ path('ngpp_gmsagc_expenses_save', {'id': expense.id}) }}" class="btn btn-warning">
                        <i class="icon-edit icon-white"></i> {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </table>
    {% else %}
        <h1>{{ 'message.nothing'|trans }}</h1>
    {% endif %}
{% endblock %}